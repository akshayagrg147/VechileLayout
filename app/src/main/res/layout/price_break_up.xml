<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_16sdp"
    android:paddingTop="8dp"
    android:background="@drawable/bg_bottomborder"
    android:paddingBottom="8dp"
    android:gravity="center_vertical"
    app:behavior_peekHeight="0dp"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:fontFamily="@font/ginger_pro_regular"
            android:text="@string/price_break_up"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:src="@drawable/close_white" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_12sdp" />
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView

           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/ginger_pro_regular"
           android:text="Ex - Showroom "
           android:textSize="@dimen/_12ssp"
           android:textColor="@color/white" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:fontFamily="@font/ginger_pro_demi"
           android:textSize="@dimen/_14ssp"
           android:text="₹1,77,095"
           android:textColor="@color/white" />

   </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ginger_pro_regular"
            android:textSize="@dimen/_12ssp"
            android:text="RTO"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="₹36,321"
            android:fontFamily="@font/ginger_pro_demi"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ginger_pro_regular"
            android:textSize="@dimen/_12ssp"
            android:text="Insurance"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/ginger_pro_demi"
            android:textSize="@dimen/_14ssp"
            android:text="₹10,438"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:fontFamily="@font/ginger_pro_demi"
            android:text="On Road Price"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/green_400" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/ginger_pro_demi"
            android:text="₹10,438"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_400"
        android:fontFamily="@font/ginger_pro_light"
        android:text="* The price may vary at showroom"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        />

</LinearLayout>