<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="@dimen/_6sdp"
    app:cardElevation="@dimen/_6sdp"
    app:cardCornerRadius="@dimen/_8sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivVideoImage"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/ic_bike_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_video_play"
            app:layout_constraintStart_toStartOf="@+id/ivVideoImage"
            app:layout_constraintTop_toTopOf="@+id/ivVideoImage"
            app:layout_constraintBottom_toBottomOf="@+id/ivVideoImage"
            app:layout_constraintEnd_toEndOf="@+id/ivVideoImage" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivThumb"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:rotationY="180"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivVideoImage"
            android:src="@drawable/ic_thumb"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:layout_marginStart="@dimen/_2sdp"
            android:fontFamily="@font/ginger_pro_bold"
            android:textColor="@color/reminder_category_text"
            app:layout_constraintTop_toTopOf="@+id/ivThumb"
            app:layout_constraintBottom_toBottomOf="@+id/ivThumb"
            app:layout_constraintStart_toEndOf="@+id/ivThumb"
            tools:text="Good Things"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:fontFamily="@font/ginger_pro_bold"
            android:textColor="@color/reminder_category_text"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="@+id/ivThumb"
            tools:text="• Refined engine"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:fontFamily="@font/ginger_pro_bold"
            android:textColor="@color/reminder_category_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLine1"
            app:layout_constraintStart_toStartOf="@+id/ivThumb"
            tools:text="• Metal body panels"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>