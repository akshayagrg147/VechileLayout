<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="50"
        android:useLevel="false">

        <gradient
            android:angle="0"
            android:centerColor="@color/grad_start_color"
            android:endColor="@color/grad_ens_color"
            android:gradientRadius="@dimen/activity_vertical_margin"
            android:startColor="@color/selected"
            android:type="sweep"
            android:useLevel="false" />

    </shape>

</rotate>